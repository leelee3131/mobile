<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication02.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quickcoding02"
        android:id="@+id/textView" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType=""
        android:ems="6"
        android:hint="0~500number"
        android:id="@+id/number"
        android:layout_alignTop="@+id/btn1"
        android:layout_alignRight="@+id/btn4"
        android:layout_alignEnd="@+id/btn4" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Send"
        android:id="@+id/btn1"
        android:onClick="btn1"
        android:layout_marginTop="103dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Smaller"
        android:id="@+id/btn2"

        android:onClick="btn2"
        android:layout_alignTop="@+id/btn3"
        android:layout_toLeftOf="@+id/btn4"
        android:layout_toStartOf="@+id/btn4" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Bigger"
        android:id="@+id/btn3"

        android:onClick="btn3"
        android:layout_above="@+id/btn4"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Binggo"
        android:id="@+id/btn4"

        android:onClick="btn4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp" />

</RelativeLayout>
